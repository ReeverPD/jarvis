<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="jarvisPU"
		transaction-type="JTA">

		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>java:comp/env/jdbc/JarvisDS</jta-data-source>

		<class>com.eventhorizon.jarvis.entities.AbstractEntity</class>
		<class>com.eventhorizon.jarvis.entities.Agenda</class>
		<class>com.eventhorizon.jarvis.entities.Compromisso</class>
		<class>com.eventhorizon.jarvis.entities.Contato</class>
		<class>com.eventhorizon.jarvis.entities.ConversaCompromisso</class>
		<class>com.eventhorizon.jarvis.entities.DadosCobranca</class>
		<class>com.eventhorizon.jarvis.entities.Faq</class>
		<class>com.eventhorizon.jarvis.entities.HistoricoCobranca</class>
		<class>com.eventhorizon.jarvis.entities.Horario</class>
		<class>com.eventhorizon.jarvis.entities.JOB_Exection</class>
		<class>com.eventhorizon.jarvis.entities.Job</class>
		<class>com.eventhorizon.jarvis.entities.User</class>
		<class>com.eventhorizon.jarvis.entities.Vertical</class>
		<class>com.eventhorizon.jarvis.entities.VerticalUser</class>
		<class>com.eventhorizon.jarvis.entities.CMSUser</class>
		<class>com.eventhorizon.jarvis.entities.ItemCobranca</class>
		<class>com.eventhorizon.jarvis.entities.ParametroAplicativo</class>

		<properties>
			<property name="eclipselink.ddl-generation" value="none" />
			<property name="eclipselink.logging.exceptions" value="true" />
			<property name="eclipselink.target-database" value="MySQL" />
			<property name="eclipselink.cache.shared.default" value="false" />
			<property name="eclipselink.cache.size.default" value="10" />
		</properties>

	</persistence-unit>
</persistence>
